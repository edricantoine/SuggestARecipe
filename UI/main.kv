
<MainScreen>:
    FloatLayout:
        id: mainScreen
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        canvas:
            Color:
                #:import hex kivy.utils.get_color_from_hex
                rgba: hex('#EDF2E9')
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            #:import hex kivy.utils.get_color_from_hex
            color: hex('#313D2D')
            id: test
            text: 'My Fridge Manager'
            font_size: '50sp'
            size: self.texture_size
            size_hint:[None, None]
            font_name: 'Deysia Brush'
            pos_hint: {'center_x':0.5, 'center_y':0.9}

        RoundedButton:
            background_normal: ''
            #:import hex kivy.utils.get_color_from_hex
            text: 'My Fridges'
            size_hint: {0.25,0.1}
            pos_hint: {'center_x':0.25, 'center_y':0.5}
            font_name: 'AntipastoPro_trial'
            on_press:
                root.printFridges()



        RoundedButton:
            background_normal: ''
            #:import hex kivy.utils.get_color_from_hex
            text: 'New Fridge'
            size_hint: {0.25,0.1}
            pos_hint: {'center_x':0.75, 'center_y':0.5}
            font_name: 'AntipastoPro_trial'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Create Fridge'



<createFridgeScreen>:
    FloatLayout:
        id: cFridgeScreen
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        canvas:
            Color:
                #:import hex kivy.utils.get_color_from_hex
                rgba: hex('#EDF2E9')
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            #:import hex kivy.utils.get_color_from_hex
            color: hex('#313D2D')
            id: test
            text: 'Create New Fridge'
            font_size: '20sp'
            size: self.texture_size
            size_hint:[None, None]
            font_name: 'AntipastoPro_trial'
            pos_hint: {'center_x':0.5, 'center_y':0.75}

        RoundedButton:
            id: cScreenCreateButton
            background_normal: ''
            #import hex kivy.utils.get_color_from_hex
            text: 'Create'
            size_hint:[None, None]
            size: '75sp', '50sp'
            pos_hint: {'center_x': 0.8, 'center_y': 0.5}
            font_name: 'AntipastoPro_trial'
            on_press:
                temp = cScreenNameInput.text
                cScreenNameInput.text = ""
                cScreenNameInput.hint_text = root.attemptAddFridge(temp)

        TextInput:
            id: cScreenNameInput
            hint_text: 'Enter name here...'
            pos_hint: {'center_x': 0.35, 'center_y' : 0.5}
            size_hint: [None, None]
            size: '200sp', '20sp'
            font_name: 'AntipastoPro_trial'
            on_text:
                cScreenNameInput.hint_text = "Enter name here..."


        RoundedButton:
            id: cScreenBackButton
            background_normal: ''
            #:import hex kivy.utils.get_color_from_hex
            text: 'Back'
            size_hint: [None, None]
            size: '50sp', '50sp'
            pos_hint: {'center_x':0.15, 'center_y':0.05}
            font_name: 'AntipastoPro_trial'
            on_press:
                cScreenNameInput.text = ""
                cScreenNameInput.hint_text = "Enter name here..."
                root.manager.transition.direction = 'right'
                root.manager.current = "Main Screen"




<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            #:import hex kivy.utils.get_color_from_hex
            rgba: hex('#0B4118')

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]



